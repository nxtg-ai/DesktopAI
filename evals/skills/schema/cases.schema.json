{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Skill Eval Cases",
  "type": "object",
  "required": ["schema_version", "skill", "cases"],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "skill": {
      "type": "string",
      "minLength": 1
    },
    "cases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "prompt", "expected"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "prompt": {
            "type": "string",
            "minLength": 1
          },
          "expected": {
            "type": "object",
            "required": ["should_trigger"],
            "additionalProperties": false,
            "properties": {
              "should_trigger": {
                "type": "boolean"
              },
              "must_include": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "must_include_any": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "must_exclude": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "must_include_ordered": {
                "type": "array",
                "minItems": 2,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          }
        }
      }
    }
  }
}
