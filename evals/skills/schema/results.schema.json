{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Skill Eval Results",
  "type": "object",
  "required": ["schema_version", "skill", "results"],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "skill": {
      "type": "string",
      "minLength": 1
    },
    "results": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "should_trigger", "response"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "should_trigger": {
            "type": "boolean"
          },
          "response": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
